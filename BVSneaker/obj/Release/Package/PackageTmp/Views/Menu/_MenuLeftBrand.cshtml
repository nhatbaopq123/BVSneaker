@model IEnumerable<BVSneaker.Models.EF.Brand>

@if (Model != null && Model.Any())
{
    <ul class="sidebar_categories">
        @foreach (var item in Model)
        {
            if (ViewBag.BrandId == item.Brand_Id)
            {
                <li class="active"><a href="/brand/@item.Alias-@item.Brand_Id"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Name</a></li>
            }
            else
            {
                <li><a href="/brand/@item.Alias-@item.Brand_Id">@item.Name</a></li>
            }
        }
    </ul>
}