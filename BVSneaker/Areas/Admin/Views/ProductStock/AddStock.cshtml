@model BVSneaker.Models.EF.ProductStock
@{
    ViewBag.Title = "Edit brand";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Brand" class="nav-link">Product</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Detail</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Product</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Product</a></li>
                    <li class="breadcrumb-item active">Detail</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Product Infomation</h3>

            @*<div class="card-tools">
                    <a href="/menu/add" class="btn btn-primary">Thêm mới</a>
                </div>*@
        </div>
        <div class="card-body">
            <div class="card-body p-0">
                @using (Html.BeginForm("AddStock", "ProductStock", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @*@Html.HiddenFor(x => x.Product_Id)*@
                    <input type="hidden" name="Product_Id" value="@ViewBag.P_Id" />
                    <input type="hidden" name="Product" value="@ViewBag.ProductName" />
                    <!-- your steps content here -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="activity">
                                <div class="row">
                                    <div class="col-lg-2">
                                        <div class="row" style="padding:20px;">
                                            <label for="exampleInputEmail1">Size</label>
                                            <div class="input-group mb-3">
                                                @Html.TextBoxFor(x => x.Size, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Size, null, new { @class = "text-danger" })
                                                <div class="input-group-append">
                                                    <span class="input-group-text">Size</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row" style="padding:20px;">
                                            <label for="exampleInputEmail1">Quantity</label>
                                            @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.Quantity, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="row" style="padding:20px;">
                                            <label for="exampleInputEmail1">Price</label>
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">$</span>
                                                </div>
                                                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Price, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- /.post -->
                            </div>
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div>
                    <div class="form-group">
                        <a href="/Admin/Product/Detail/@ViewBag.P_Id" class="btn btn-danger">Back</a>
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->