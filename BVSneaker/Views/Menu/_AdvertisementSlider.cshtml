@model IEnumerable<BVSneaker.Models.EF.Advertisement>
@if (Model != null && Model.Any())
{
    <div class="carousel-item active">
        <img class="d-block float-right height700 w-50 " src="@Model.First().Image" alt="First slide">
        <div class="container float-left  fill_height">
            <div class="row align-items-center fill_height">
                <div class="col">
                    <div class="main_slider_content">
                        <h1 style="word-break:break-word; max-width:500px">@Model.First().Title</h1>
                        <p style="word-break:break-word; max-width:500px">@Model.First().Description</p>
                        <div class="red_button shop_now_button button-red-custom" style="background: #f80438 !important; left: 50%;"><a href="@Model.First().Alias">shop now</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    foreach (var item in Model.Skip(1))
    {
        {
            <div class="carousel-item">
                <img class="d-block float-right height700 w-50 " src="@item.Image" alt="First slide">
                <div class="container float-left fill_height">
                    <div class="row align-items-center fill_height">
                        <div class="col">
                            <div class="main_slider_content">
                                <h1 style="word-break:break-word; max-width:500px">@item.Title</h1>
                                <p style="word-break:break-word; max-width:500px">@item.Description</p>
                                <div class="red_button shop_now_button button-red-custom" style="background: #f80438 !important; left: 50%;"><a href="@item.Alias">shop now</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}
else
{
    <div class="carousel-item active">
        <img class="d-block w-100 height700" src="#" alt="NULL">
        <div class="container fill_height">
            <div class="row align-items-center fill_height">
                <div class="col">
                    <div class="main_slider_content">
                        <h6>NULL</h6>
                        <h1>NULL</h1>
                        <div class="red_button shop_now_button"><a href="#">NULL</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
