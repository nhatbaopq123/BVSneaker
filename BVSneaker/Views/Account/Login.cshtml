@using BVSneaker.Models
@model LoginViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <!-- Section: Design Block -->
    <section class="text-center">
        <!-- Jumbotron -->
        <div class="container py-4">
            <div class="row g-0 align-items-center">
                <div class="col-6">
                    <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            height: 625px;
            width: 592px;
            ">
                        @Html.AntiForgeryToken()
                        <div class="card-body text-center" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); padding:80px">
                            <h2 class="bold mt-lg-5 mb-5">Sign in</h2>

                            <form>
                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "UserName" })
                                    </div>
                                </div>
                                <div class="form-outline mb-4">
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                    </div>
                                </div>

                                <!-- Checkbox -->
                                @Html.ValidationSummary("", new { @class = "text-danger text-left ml-3" })
                                <hr />
                                <!-- Submit button -->
                                <div class="row ml-0">
                                    <div class="col-4">
                                        <input type="submit" class="btn btn-block" style="background-color: #f80438; color:white" value="Sign in" />
                                    </div>
                                </div>
                                <div class="row mt-2 ml-3">
                                    <p class="float-left">Not have an account yet? <span><a href="/account/register" style="color: #f80438; text-decoration:underline;">Sign Up</a></span></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <img src="~/Uploads/images/CustomerLogin.png" style="width: 625px; border-radius: 0px 30px 30px 0px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); "
                         alt="" />
                </div>
            </div>
        </div>
        <!-- Jumbotron -->
    </section>
    <!-- Section: Design Block -->


}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


 